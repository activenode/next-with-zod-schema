{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "incremental": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "declaration": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
